}

/**
 * Implements hook_list_activity_actions().
 */
function statuses_tags_list_activity_actions($hook, $op, $max_age) {
  $actions = array();
  if (!empty($max_age)) {
    $min_time = REQUEST_TIME - $max_age;
  }
  else {
    $min_time = 0;
  }

  $result = db_query("
    SELECT f.sid as id, f.created, t.rid as actor
    FROM {statuses_tags} t INNER JOIN {statuses} f ON t.sid = f.sid
    WHERE t.type = :type AND created > :created
  ", array(':type' => 'user', ':created' => $min_time));
  foreach ($result as $row) {
    $actions[] = (array) $row;
  }

  return $actions;
}

